{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "jsx": "react",
        "outDir": "build",
        "declaration": true,
        "removeComments": true
    },
    "include": [
        "_src/app/**/*.ts",
        "_src/app/**/*.tsx"
    ]
}